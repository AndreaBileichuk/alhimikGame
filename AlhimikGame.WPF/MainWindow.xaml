<Window x:Class="AlhimikGame.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AlhimikGame.WPF.ViewModels"
        xmlns:local="clr-namespace:AlhimikGame.WPF"
        mc:Ignorable="d"
        Title="Алхімік" Height="600" Width="900"
        Background="#1E1E2A"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3A4A"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A2A38"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Profile Button Style -->
        <Style x:Key="ProfileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6246EA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" Width="40" Height="40"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7E66FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5438D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#2D2D3A" BorderThickness="0,0,0,1" BorderBrush="#444452">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- App Logo -->
                <TextBlock Grid.Column="0" 
                           Text="АЛХІМІК" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#6246EA" 
                           VerticalAlignment="Center" 
                           Margin="20,0,30,0"/>
                
                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Алхімія" Style="{StaticResource NavButtonStyle}" 
                            Command="{Binding NavigateCommand}" CommandParameter="Alchemy"/>
                    <Button Content="Локації" Style="{StaticResource NavButtonStyle}" 
                            Command="{Binding NavigateCommand}" CommandParameter="Location"/>
                    <Button Content="Рівні гри" Style="{StaticResource NavButtonStyle}" 
                            Command="{Binding NavigateCommand}" CommandParameter="Levels"/>
                    <Button Content="Питання від npc" Style="{StaticResource NavButtonStyle}" 
                            Command="{Binding NavigateCommand}" CommandParameter="NPCs"/>
                </StackPanel>
                
                <!-- Profile Button -->
                <Grid Grid.Column="2" Margin="0,0,20,0">
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Profile" 
                            Style="{StaticResource ProfileButtonStyle}" 
                            ToolTip="Профіль">
                        <Grid>
                            <TextBlock Text="НА" FontWeight="Bold" Foreground="White"/>
                        </Grid>
                    </Button>
                </Grid>
            </Grid>
        </Border>
        
        <Border Grid.Row="1" Background="#1E1E2A" Padding="20">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>