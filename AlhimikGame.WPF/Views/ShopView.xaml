<UserControl x:Class="AlhimikGame.WPF.Views.ShopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AlhimikGame.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style x:Key="RegularTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#E0E0FF"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6C5CE7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8872F2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#38304D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5C527F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#282438">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Shop Name -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding CurrentShop.Name}" 
                   FontSize="26" 
                   Style="{StaticResource HeaderTextStyle}"
                   Margin="20,20,0,5"/>
        
        <!-- Shop Description -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding CurrentShop.Description}" 
                   FontSize="16" 
                   Style="{StaticResource RegularTextStyle}"
                   TextWrapping="Wrap"
                   Margin="20,0,20,15"/>
        
        <!-- Inventory List -->
        <Border Grid.Row="2" 
                Background="#322E48" 
                CornerRadius="8"
                Margin="20,5,20,15">
            <ListView ItemsSource="{Binding InventoryItems}" 
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="White">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E375A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Інгредієнт" Width="200">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Background" Value="#38304D"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="32" Height="32" 
                                                Background="#6C5CE7" 
                                                CornerRadius="4"
                                                Margin="0,0,10,0">
                                            <Image Source="{Binding Ingredient.IconPath}" 
                                                   Stretch="Uniform"
                                                   Margin="4"/>
                                        </Border>
                                        <TextBlock Text="{Binding Ingredient.Name}" 
                                                   VerticalAlignment="Center"
                                                   Foreground="White"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Опис" Width="250">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Background" Value="#38304D"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Ingredient.Description}" 
                                               TextWrapping="Wrap" 
                                               MaxWidth="240"
                                               Foreground="#E0E0FF"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Доступно" Width="80">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Background" Value="#38304D"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Quantity}" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Ціна" Width="80">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Background" Value="#38304D"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Price}" 
                                               HorizontalAlignment="Center"
                                               Foreground="#FFD700"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Купити" Width="120">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Background" Value="#38304D"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Width="40" 
                                                 Text="{Binding PurchaseQuantity, UpdateSourceTrigger=PropertyChanged}" 
                                                 VerticalAlignment="Center"
                                                 Style="{StaticResource TextBoxStyle}"/>
                                        <Button Content="Купити" 
                                                Command="{Binding DataContext.BuyCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                                CommandParameter="{Binding}"
                                                Margin="10,0,0,0" 
                                                Style="{StaticResource ButtonStyle}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        
        <!-- Player Information -->
        <Border Grid.Row="3" 
                Background="#38304D" 
                CornerRadius="8" 
                Padding="15,10"
                Margin="20,0,20,20">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <TextBlock Text="Ваше золото:" 
                           FontSize="16" 
                           Foreground="#E0E0FF"
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <TextBlock Text="{Binding PlayerGold}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#FFD700"
                           VerticalAlignment="Center"/>
                <TextBlock Text=" g" 
                           FontSize="16" 
                           Foreground="#FFD700"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>